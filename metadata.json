{
  "icon": "open-webui.svg",
  "vm": {
    "composefile": "docker-compose.yaml",
    "exposes": {
      "socket": "backend.sock"
    }
  },
  "ui": {
    "dashboard-tab": {
      "title": "Open WebUI",
      "src": "index.html",
      "root": "ui"
    }
  },
  "host": {
    "binaries": [
      {
        "darwin": [
          {
            "path": "/darwin/installer"
          }
        ],
        "linux": [
          {
            "path": "/linux/installer"
          },
          {
            "path": "/linux/searxng/limiter.toml"
          },
          {
            "path": "/linux/searxng/settings.yml"
          },
          {
            "path": "/linux/searxng/uwsgi.ini"
          }
        ],
        "windows": [
          {
            "path": "/windows/installer.exe"
          }
        ]
      }
    ],
    "x-rd-install": {
      "darwin": [
        "installer",
        "-mode=install"
      ],
      "linux": [
        "installer",
        "-mode=install"
      ],
      "windows": [
        "installer.exe",
        "-mode=install"
      ]
    },
    "x-rd-uninstall": {
      "darwin": [
        "installer",
        "-mode=uninstall"
      ],
      "linux": [
        "installer",
        "-mode=uninstall"
      ],
      "windows": [
        "installer.exe",
        "-mode=uninstall"
      ]
    },
    "x-rd-shutdown": {
      "darwin": [
        "installer",
        "-mode=shutdown"
      ],
      "linux": [
        "installer",
        "-mode=shutdown"
      ],
      "windows": [
        "installer.exe",
        "-mode=shutdown"
      ]
    }
  }
}
